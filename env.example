# Coupon Hub Bot - Local Development Environment Variables
# Copy this file to .env and adjust values as needed

# Telegram Bot Configuration
BOT_TELEGRAM_TOKEN=123:456
BOT_AUTH_TOKEN=OUR_SECRET
COMMUNITY_CHAT_ID=-42
LOGS_CHAT_ID=

# Database (PostgreSQL)
# For local dev, use docker-compose.dev.yml to start Postgres:
#   docker-compose -f docker-compose.dev.yml up -d postgres
#   docker-compose -f docker-compose.dev.yml run --rm flyway --profile migrate
# Or use your own local Postgres instance
# Note: docker-compose.dev.yml maps Postgres to host port 5439
DATABASE_URL=Server=localhost;Database=coupon_hub_bot;Port=5439;User Id=coupon_hub_bot_service;Password=coupon_hub_bot_service;Include Error Detail=true;

# Telegram API (use FakeTgApi for local testing)
# If running FakeTgApi locally: http://localhost:8080
# If using real Telegram API: leave empty
TELEGRAM_API_URL=http://localhost:8080

# Reminder Service
REMINDER_HOUR_UTC=8
REMINDER_RUN_ON_START=false

# /feedback
# Comma-separated Telegram user IDs to receive forwarded feedback messages
FEEDBACK_ADMINS=

# OCR (Azure Computer Vision) - optional for local dev
OCR_ENABLED=false
OCR_MAX_FILE_SIZE_BYTES=20971520
AZURE_OCR_ENDPOINT=https://<name>.cognitiveservices.azure.com
AZURE_OCR_KEY=

# Test Mode (enables /test/run-reminder endpoint)
TEST_MODE=true

# OpenTelemetry
OTEL_SERVICE_NAME=coupon-hub-bot
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_CONSOLE=false

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
# For Docker: use 0.0.0.0 to accept connections from outside container
# For local dev (Rider): use localhost
ASPNETCORE_URLS=http://0.0.0.0:5000
